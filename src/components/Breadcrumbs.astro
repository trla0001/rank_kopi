---
import Link from "../components/Link.astro";
const { current } = Astro.props;
---

<article>
  <Link link="/" variant="breadcrumb" label="Hjem" /><p>/</p>
  <Link link="/products" variant="breadcrumb" label="Produkter" /><p>/</p>
  <p>{current}</p>
</article>

<style>
  article {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--spacing_4);
    margin: var(--spacing_4);
    position: absolute;
    z-index: 490;
  }
  p {
    font-family: var(--font_body);
    font-size: 0.825rem;
    color: var(--secondary_500);
  }

  @media (min-width: 1000px) {
    article {
      position: static;
      margin: var(--spacing_6);
      gap: var(--spacing_5);
    }
    p {
      font-size: 1rem;
    }
  }
</style>
